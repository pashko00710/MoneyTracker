<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_layout_height"
    android:background="@mipmap/header_background"
    android:orientation="vertical"
    android:paddingTop="@dimen/drawer_status_bar_height"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">



    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_height="@dimen/header_imeageavatarsize"
            android:layout_width="@dimen/header_imeageavatarsize"
            android:id="@+id/profile_image"
            android:layout_marginStart="@dimen/profile_margin"
            android:layout_marginLeft="@dimen/profile_margin"
            android:layout_marginTop="@dimen/profile_margin"
            android:src="@drawable/me2"/>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="86dp"
        android:foregroundGravity="bottom">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/profile_margin"
            android:layout_marginBottom="28dp"
            android:text="Pavel Arkhipov"
            android:gravity="bottom"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/profile_margin"
            android:layout_marginBottom="8dp"
            android:text="pashko00710@gmail.com"
            android:gravity="bottom"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif">
        </TextView>
    </FrameLayout>
</RelativeLayout>